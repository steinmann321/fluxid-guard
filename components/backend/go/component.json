{
  "name": "go",
  "type": "backend",
  "display_name": "Go Backend",
  "description": "Enterprise-grade QA enforcement for Go backends",

  "detection": {
    "directories": ["backend", "cmd", "internal"],
    "files": ["go.mod"],
    "package_indicators": {
      "file": "go.mod",
      "contains": "module "
    }
  },

  "dependencies": {
    "system": ["go"],
    "components": ["shared"],
    "go_tools": [
      "github.com/golangci/golangci-lint/cmd/golangci-lint@latest",
      "github.com/securego/gosec/v2/cmd/gosec@latest"
    ]
  },

  "installation": {
    "config_copies": [
      {
        "source": "configs/.golangci.yml",
        "target": ".golangci.yml"
      }
    ]
  },

  "hooks": [
    "hooks/go-guard.sh",
    "hooks/go-max-lines.sh"
  ],

  "variables": {
    "backend_port": {
      "description": "Go server port",
      "default": 8080,
      "prompt": "Backend API port"
    }
  }
}
