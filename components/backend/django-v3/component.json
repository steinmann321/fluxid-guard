{
  "name": "django-v3",
  "type": "backend",
  "display_name": "Django V3 (p26f mirror)",
  "description": "100% p26f backend enforcement",
  "detection": {
    "directories": ["backend"],
    "files": ["backend/manage.py"],
    "package_indicators": { "file": "backend/requirements.txt", "contains": "django" }
  },
  "dependencies": {
    "system": ["python3", "pip"],
    "components": ["shared-v3"]
  },
  "installation": {
    "venv_path": "backend/.venv",
    "requirements_file": "configs/requirements-qa.txt",
    "config_merges": [
      { "source": "configs/pyproject-additions.toml", "target": "backend/pyproject.toml", "method": "merge", "create_if_missing": true }
    ]
  },
  "hooks": [],
  "variables": {
    "backend_port": { "description": "Django dev server port", "default": 8000, "prompt": "Backend API port" }
  }
}
