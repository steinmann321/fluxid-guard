{
  "name": "shared-v2",
  "type": "shared",
  "display_name": "shared v2 qa checks",
  "description": "p26f-inspired phased pre-commit + shared QA",

  "detection": {
    "always": false
  },

  "dependencies": {
    "system": ["git"],
    "external": ["gitleaks" ]
  },

  "installation": {
    "config_copies": [
      { "source": "configs/.pre-commit-config.yaml", "target": ".pre-commit-config.yaml" },
      { "source": "configs/.gitleaks.toml", "target": ".gitleaks.toml" },
      { "source": "configs/.jscpdrc", "target": ".jscpdrc" },
      { "source": "configs/semgrep-base.yml", "target": ".semgrep/base.yml" },
      { "source": "configs/semgrep-e2e.yml", "target": ".semgrep/e2e.yml" }
    ]
  },

  "hooks": [
    "hooks/shared-guard-v2.sh",
    "hooks/check-bypass-directives.sh"
  ],

  "variables": {}
}
