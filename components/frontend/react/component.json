{
  "name": "react",
  "type": "frontend",
  "display_name": "React Frontend",
  "description": "Strict QA enforcement for React + TypeScript + Vite frontends",

  "detection": {
    "directories": ["frontend"],
    "files": ["frontend/package.json"],
    "package_indicators": {
      "file": "frontend/package.json",
      "contains": "react"
    }
  },

  "dependencies": {
    "system": ["node", "npm"],
    "components": ["shared"]
  },

  "installation": {
    "package_file": "frontend/package.json",
    "config_merges": [
      {
        "source": "configs/package-additions.json",
        "target": "frontend/package.json",
        "method": "merge"
      }
    ],
    "config_copies": [
      {
        "source": "configs/eslint.config.js",
        "target": "frontend/eslint.config.js"
      },
      {
        "source": "configs/vite.config.ts",
        "target": "frontend/vite.config.ts",
        "template_vars": ["backend_port"]
      },
      {
        "source": "configs/vitest.config.ts",
        "target": "frontend/vitest.config.ts"
      },
      {
        "source": "configs/dependency-cruiser.cjs",
        "target": "frontend/dependency-cruiser.cjs"
      },
      {
        "source": "configs/stylelint.config.json",
        "target": "frontend/stylelint.config.json"
      },
      {
        "source": "configs/prettierrc.cjs",
        "target": "frontend/.prettierrc.cjs"
      },
      {
        "source": "configs/knip.json",
        "target": "frontend/knip.json"
      },
      {
        "source": "configs/tsconfig-additions.json",
        "target": "frontend/tsconfig.json"
      },
      {
        "source": "configs/tsconfig.app.json",
        "target": "frontend/tsconfig.app.json"
      },
      {
        "source": "configs/tsconfig.node.json",
        "target": "frontend/tsconfig.node.json"
      }
    ]
  },

  "hooks": [
    "hooks/frontend-guard.sh",
    "hooks/frontend-max-lines.sh"
  ],

  "variables": {
    "frontend_port": {
      "description": "Frontend dev server port (Vite default)",
      "default": 5173,
      "prompt": "Frontend dev server port"
    }
  }
}
