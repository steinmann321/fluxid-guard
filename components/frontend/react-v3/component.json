{
  "name": "react-v3",
  "type": "frontend",
  "display_name": "React V3 (p26f mirror)",
  "description": "100% p26f frontend enforcement",
  "detection": {
    "directories": ["frontend"],
    "files": ["frontend/package.json"],
    "package_indicators": { "file": "frontend/package.json", "contains": "react" }
  },
  "dependencies": {
    "system": ["node", "npm"],
    "components": ["shared-v3"]
  },
  "installation": {
    "package_file": "frontend/package.json",
    "config_merges": [
      { "source": "configs/package-additions.json", "target": "frontend/package.json", "method": "merge" }
    ],
    "config_copies": [
      { "source": "configs/eslint.config.js", "target": "frontend/eslint.config.js" },
      { "source": "configs/vite.config.ts", "target": "frontend/vite.config.ts", "template_vars": ["backend_port"] },
      { "source": "configs/vitest.config.ts", "target": "frontend/vitest.config.ts" },
      { "source": "configs/tsconfig-additions.json", "target": "frontend/tsconfig.json" },
      { "source": "configs/tsconfig.app.json", "target": "frontend/tsconfig.app.json" },
      { "source": "configs/tsconfig.node.json", "target": "frontend/tsconfig.node.json" },
      { "source": "configs/prettierrc.cjs", "target": "frontend/.prettierrc.cjs" },
      { "source": "configs/stylelint.config.cjs", "target": "frontend/stylelint.config.cjs" },
      { "source": "configs/stylelintrc.json", "target": "frontend/.stylelintrc.json" },
      { "source": "configs/knip.json", "target": "frontend/knip.json" },
      { "source": "configs/dependency-cruiser.cjs", "target": "frontend/.dependency-cruiser.cjs" }
    ]
  },
  "hooks": [],
  "variables": {
    "frontend_port": { "description": "Vite dev server port", "default": 5173, "prompt": "Frontend dev server port" }
  }
}
